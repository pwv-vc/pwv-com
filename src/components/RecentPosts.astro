---
import { getRecentPosts } from '../lib/news';
import PostsGrid from './PostsGrid.astro';
import Button from './Button.astro';
import Heading2 from './Heading2.astro';

const recentPosts = await getRecentPosts(3);
---

<section class="mx-auto">
  <div class="mb-8 pt-4">
    <Heading2>Latest News</Heading2>

    <div class="mt-12 mb-6">
      <PostsGrid posts={recentPosts} size="large" />
    </div>

    <div class="mt-8 text-center">
      <Button caption="More" link="/news" />
    </div>
  </div>
</section>
