---
import { getRecentPosts } from '../lib/news';
import PostsGrid from './PostsGrid.astro';
import Button from './Button.astro';

const recentPosts = await getRecentPosts(3);
---

<section class="mx-auto">
  <div class="mb-8 pt-4">
    <h2
      class="text-primary after:bg-pwv-green relative my-4 font-serif text-2xl font-bold after:absolute after:-bottom-4 after:left-0 after:h-1 after:w-[72px] after:content-[''] lg:text-3xl"
    >
      News
    </h2>
  </div>

  <div class="mt-12 mb-6">
    <PostsGrid posts={recentPosts} size="large" />
  </div>

  <div class="mt-8 text-center">
    <Button caption="More" link="/news" />
  </div>
</section>
