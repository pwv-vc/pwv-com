---
// Terminal-themed CTA with instructions
import TerminalIcon from '../icons/TerminalIcon.astro';
---

<div
  class="terminal-cta-container bg-pwv-black text-pwv-green my-4 p-6"
>
  <div class="flex flex-col gap-6">
    <!-- Header -->
    <div class="flex items-center gap-3">
      <TerminalIcon />
      <h1 class="font-mono text-2xl font-bold">Terminal</h1>
    </div>

    <!-- How to use section -->
    <div class="space-y-4">
      <ul class="text-pwv-green/80 space-y-3 font-mono text-sm">
        <li class="flex items-start gap-2">
          <span class="text-pwv-green">▸</span>
          <span
            >Use the PWV Terminal to find industry highlights, raises, feature
            announcements and more</span
          >
        </li>
        <li class="flex items-start gap-2">
          <span class="text-pwv-green">▸</span>
          <span
            >View aggregate news and insights from our founder ecosystem</span
          >
        </li>
        <li class="flex items-start gap-2">
          <span class="text-pwv-green">▸</span>
          <span>Share on social</span>
        </li>
      </ul>
    </div>

    <!-- CTA Button -->
    <div class="flex justify-start">
      <a
        href="/terminal/"
        class="border-pwv-green text-pwv-green hover:bg-pwv-green hover:text-pwv-black inline-flex items-center gap-2 rounded-full border-2 bg-transparent px-8 py-3 font-mono text-sm font-medium transition-all"
      >
        <span>Launch Terminal</span>
        <span class="terminal-cursor">→</span>
      </a>
    </div>
  </div>
</div>

<style>
  /* CRT monitor style */
  .terminal-cta-container {
    border-radius: 16px;
    border: 8px solid #1a1a1a;
    box-shadow: 
      0 0 0 2px #333,
      0 0 40px rgba(0, 210, 46, 0.15),
      inset 0 0 60px rgba(0, 0, 0, 0.8);
  }

  @media (max-width: 640px) {
    .terminal-cta-container {
      border-radius: 12px;
      border-width: 6px;
    }
  }

  @keyframes blink {
    0%,
    49% {
      opacity: 1;
    }
    50%,
    100% {
      opacity: 0;
    }
  }

  .terminal-cursor {
    animation: blink 1s step-end infinite;
  }
</style>
