---
import Logo from '../assets/logo.svg';
---

<header class="mx-auto mt-4 mb-8">
  <!-- Hidden Checkbox -->
  <input type="checkbox" id="mobile-menu-toggle" class="peer sr-only" />

  <nav class="flex items-center justify-between py-4">
    <!-- Logo -->
    <a href="/" class="flex-shrink-0">
      <Logo class="h-[74px] w-[300px]" />
    </a>

    <!-- Desktop Menu -->
    <div class="hidden md:flex md:items-center md:space-x-8">
      <a href="/about" class="pwv-link">About</a>
      <a href="/portfolio" class="pwv-link">Portfolio</a>
      <a href="/news" class="pwv-link">News</a>
      <a
        href="/apply"
        class="bg-pwv-black hover:bg-pwv-black rounded-md px-4 py-2 text-center text-white transition-colors duration-200"
        >Apply</a
      >
    </div>

    <!-- Mobile Menu Toggle -->
    <label
      for="mobile-menu-toggle"
      class="flex h-10 w-10 cursor-pointer items-center justify-center rounded-md text-gray-700 transition-colors duration-200 hover:bg-gray-100 hover:text-gray-900 md:hidden"
      aria-label="Toggle mobile menu"
    >
      <!-- Hamburger Icon -->
      <svg
        class="h-6 w-6 transition-transform duration-200 peer-checked:scale-0 peer-checked:rotate-45"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
      <!-- Close Icon -->
      <svg
        class="absolute h-6 w-6 scale-0 transition-transform duration-200 peer-checked:scale-100"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </label>
  </nav>

  <!-- Mobile Menu -->
  <div
    class="mb-4 max-h-0 overflow-hidden transition-all duration-300 peer-checked:max-h-96 md:hidden"
  >
    <div class="flex flex-col space-y-4 py-4">
      <a href="/about" class="pwv-link py-2">About</a>
      <a href="/portfolio" class="pwv-link py-2">Portfolio</a>
      <a href="/news" class="pwv-link py-2">News</a>
      <a
        href="/apply"
        class="bg-pwv-black hover:bg-pwv-black rounded-md px-4 py-2 text-center text-white transition-colors duration-200"
        >Apply</a
      >
    </div>
  </div>
</header>
