---
export interface Props {
  handle: string;
}

const { handle } = Astro.props;
const url = `https://twitter.com/${handle}`;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="border-pwv-green bg-pwv-white text-pwv-black hover:bg-pwv-green hover:text-pwv-black inline-flex items-center justify-center rounded-full border-2 p-2 transition-colors"
  aria-label="Twitter/X"
>
  <svg
    class="h-5 w-5"
    fill="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path
      d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
    ></path>
  </svg>
</a>
