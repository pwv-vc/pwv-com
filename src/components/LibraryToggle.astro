---
export interface Props {
  externalCount: number;
  nonExternalCount: number;
  activeFilter?: 'all' | 'community' | 'pwv';
}

const { externalCount, nonExternalCount, activeFilter = 'all' } = Astro.props;
---

<div class="mb-8 flex scroll-mt-20 items-center justify-center" id="view">
  <div class="flex rounded-lg bg-gray-100 p-1">
    <a
      href="/library"
      class={`px-4 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:text-gray-700 hover:bg-white/50 ${
        activeFilter === 'all'
          ? 'text-gray-800 bg-white shadow-sm'
          : 'text-gray-500'
      }`}
    >
      All
      <span class="ml-1 text-xs opacity-75"
        >({externalCount + nonExternalCount})</span
      >
    </a>
    <a
      href="/library?filter=pwv"
      class={`px-4 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:text-gray-700 hover:bg-white/50 ${
        activeFilter === 'pwv'
          ? 'text-gray-800 bg-white shadow-sm'
          : 'text-gray-500'
      }`}
    >
      PWV
      <span class="ml-1 text-xs opacity-75">({nonExternalCount})</span>
    </a>
    <a
      href="/library?filter=community"
      class={`px-4 py-2 rounded-md text-sm font-medium transition-all duration-200 hover:text-gray-700 hover:bg-white/50 ${
        activeFilter === 'community'
          ? 'text-gray-800 bg-white shadow-sm'
          : 'text-gray-500'
      }`}
    >
      Founders &amp; Community
      <span class="ml-1 text-xs opacity-75">({externalCount})</span>
    </a>
  </div>
</div>
