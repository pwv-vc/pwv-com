---
import type { CollectionEntry } from 'astro:content';

interface Props {
  currentPost: CollectionEntry<'library'>;
  nextPost?: CollectionEntry<'library'>;
  previousPost?: CollectionEntry<'library'>;
}

const { currentPost, nextPost, previousPost } = Astro.props;
---

<div class="mx-auto mt-12 max-w-screen-xl border-t border-gray-200 pt-8">
  <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
    <!-- Previous Post -->
    {
      previousPost ? (
        <a
          href={`/library/${previousPost.id}`}
          class="group flex min-w-0 items-center rounded-lg border border-gray-200 p-4 transition-all duration-200 hover:border-gray-300 hover:shadow-sm"
        >
          <div class="mr-3 flex-shrink-0">
            <svg
              class="h-4 w-4 text-gray-400 group-hover:text-gray-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 19l-7-7 7-7"
              />
            </svg>
          </div>
          <div class="min-w-0 flex-1">
            <p class="mb-1 text-xs tracking-wide text-gray-500 uppercase">
              Previous
            </p>
            <p class="truncate text-sm font-medium text-gray-900 group-hover:text-gray-700">
              {previousPost.data.title}
            </p>
          </div>
        </a>
      ) : (
        <div class="rounded-lg border border-gray-100 bg-gray-50 p-4">
          <div class="flex items-center">
            <div class="mr-3 flex-shrink-0">
              <svg
                class="h-4 w-4 text-gray-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 19l-7-7 7-7"
                />
              </svg>
            </div>
            <div class="min-w-0 flex-1">
              <p class="mb-1 text-xs tracking-wide text-gray-400 uppercase">
                Previous
              </p>
              <p class="text-sm font-medium text-gray-400">No previous post</p>
            </div>
          </div>
        </div>
      )
    }

    <!-- Back to Library -->
    <a
      href="/library"
      class="group flex flex-col items-center justify-center rounded-lg border border-gray-200 p-4 transition-all duration-200 hover:border-gray-300 hover:shadow-sm"
    >
      <p class="mb-1 text-xs tracking-wide text-gray-500 uppercase">Back</p>
      <p class="text-sm font-medium text-gray-900 group-hover:text-gray-700">
        All Posts
      </p>
    </a>

    <!-- Next Post -->
    {
      nextPost ? (
        <a
          href={`/library/${nextPost.id}`}
          class="group flex min-w-0 items-center rounded-lg border border-gray-200 p-4 transition-all duration-200 hover:border-gray-300 hover:shadow-sm"
        >
          <div class="min-w-0 flex-1 text-right">
            <p class="mb-1 text-xs tracking-wide text-gray-500 uppercase">
              Next
            </p>
            <p class="truncate text-sm font-medium text-gray-900 group-hover:text-gray-700">
              {nextPost.data.title}
            </p>
          </div>
          <div class="ml-3 flex-shrink-0">
            <svg
              class="h-4 w-4 text-gray-400 group-hover:text-gray-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"
              />
            </svg>
          </div>
        </a>
      ) : (
        <div class="rounded-lg border border-gray-100 bg-gray-50 p-4">
          <div class="flex items-center">
            <div class="min-w-0 flex-1 text-right">
              <p class="mb-1 text-xs tracking-wide text-gray-400 uppercase">
                Next
              </p>
              <p class="text-sm font-medium text-gray-400">No next post</p>
            </div>
            <div class="ml-3 flex-shrink-0">
              <svg
                class="h-4 w-4 text-gray-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </div>
          </div>
        </div>
      )
    }
  </div>
</div>
