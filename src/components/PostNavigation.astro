---
import type { CollectionEntry } from 'astro:content';

interface Props {
  currentPost: CollectionEntry<'library'>;
  nextPost?: CollectionEntry<'library'>;
  previousPost?: CollectionEntry<'library'>;
}

const { currentPost, nextPost, previousPost } = Astro.props;
---

<div class="max-w-screen-xl mx-auto mt-12 pt-8 border-t border-gray-200">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <!-- Previous Post -->
    {previousPost ? (
      <a
        href={`/library/${previousPost.id}`}
        class="group flex items-center p-4 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition-all duration-200 min-w-0"
      >
        <div class="flex-shrink-0 mr-3">
          <svg class="w-4 h-4 text-gray-400 group-hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </div>
        <div class="min-w-0 flex-1">
          <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Previous</p>
          <p class="text-sm font-medium text-gray-900 group-hover:text-gray-700 truncate">
            {previousPost.data.title}
          </p>
        </div>
      </a>
    ) : (
      <div class="p-4 border border-gray-100 rounded-lg bg-gray-50">
        <div class="flex items-center">
          <div class="flex-shrink-0 mr-3">
            <svg class="w-4 h-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          </div>
          <div class="min-w-0 flex-1">
            <p class="text-xs text-gray-400 uppercase tracking-wide mb-1">Previous</p>
            <p class="text-sm font-medium text-gray-400">No previous post</p>
          </div>
        </div>
      </div>
    )}

    <!-- Back to Library -->
    <a
      href="/library"
      class="group flex flex-col items-center justify-center p-4 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition-all duration-200"
    >
      <svg class="w-5 h-5 text-gray-400 group-hover:text-gray-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v2H8V5z" />
      </svg>
      <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Library</p>
      <p class="text-sm font-medium text-gray-900 group-hover:text-gray-700">Back to All Posts</p>
    </a>

    <!-- Next Post -->
    {nextPost ? (
      <a
        href={`/library/${nextPost.id}`}
        class="group flex items-center p-4 border border-gray-200 rounded-lg hover:border-gray-300 hover:shadow-sm transition-all duration-200 min-w-0"
      >
        <div class="min-w-0 flex-1 text-right">
          <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">Next</p>
          <p class="text-sm font-medium text-gray-900 group-hover:text-gray-700 truncate">
            {nextPost.data.title}
          </p>
        </div>
        <div class="flex-shrink-0 ml-3">
          <svg class="w-4 h-4 text-gray-400 group-hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </div>
      </a>
    ) : (
      <div class="p-4 border border-gray-100 rounded-lg bg-gray-50">
        <div class="flex items-center">
          <div class="min-w-0 flex-1 text-right">
            <p class="text-xs text-gray-400 uppercase tracking-wide mb-1">Next</p>
            <p class="text-sm font-medium text-gray-400">No next post</p>
          </div>
          <div class="flex-shrink-0 ml-3">
            <svg class="w-4 h-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </div>
        </div>
      </div>
    )}
  </div>
</div>
