---
import TimelineEventCard from './TimelineEventCard.astro';
import type { TimelineEvent } from './types';

interface Props {
  month: string;
  events: TimelineEvent[];
  categoryStyles: Record<NonNullable<TimelineEvent['category']>, string>;
}

const { month, events, categoryStyles }: Props = Astro.props;
---

<div class="relative">
  <div class="mb-4 flex items-center gap-3">
    <div class="hidden h-3 w-3 rounded-full bg-pwv-green shadow md:block" aria-hidden="true"></div>
    <p class="text-sm font-semibold uppercase tracking-wide text-pwv-black/70">
      {month}
    </p>
    <div class="hidden h-px flex-1 bg-pwv-black/10 md:block" aria-hidden="true"></div>
  </div>

  <div class="space-y-6">
    {events.map((event) => (
      <TimelineEventCard event={event} categoryStyles={categoryStyles} />
    ))}
  </div>
</div>

