---
interface Props {
  alt?: string;
  class?: string;
}

const { alt = 'Placeholder image', class: className = '' } = Astro.props;
---

<div class={`bg-surface-muted flex items-center justify-center ${className}`}>
  <svg
    class="text-subtle h-16 w-16"
    fill="currentColor"
    viewBox="0 0 20 20"
    aria-hidden="true"
  >
    <path
      fill-rule="evenodd"
      d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"
      clip-rule="evenodd"></path>
  </svg>
  <span class="sr-only">{alt}</span>
</div>
