---
import { getRecentLibraryPosts, getAllLibraryPosts } from '../lib/library';
import PostsGrid from './PostsGrid.astro';

const recentPosts = await getRecentLibraryPosts(6);
const allPosts = await getAllLibraryPosts();
---

<div class="max-w-none">
  <div class="mb-8">
    <h2
      class="my-4 font-serif text-2xl font-bold text-[var(--pwv-blue)] lg:text-3xl"
    >
      Latest insights and thoughts
    </h2>
    <p class="text-lg text-gray-600">
      Perspectives and announcements from PWV, our founders and community.
    </p>
  </div>

  <div class="mb-6">
    <PostsGrid posts={recentPosts} size="large" />
  </div>

  <div class="mt-8 text-center">
    <a
      href="/library"
      class="inline-flex items-center gap-2 font-medium text-white transition-colors hover:text-gray-100 bg-[var(--pwv-blue)] px-5 py-2 rounded-lg shadow-md"
    >
      View More
      <svg
        class="h-4 w-4"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M9 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</div>
