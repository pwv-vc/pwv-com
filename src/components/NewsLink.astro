---
import SocialLink from './SocialLink.astro';

export interface Props {
  authorName: string;
}

const { authorName } = Astro.props;
const authorSlug = authorName
  .toLowerCase()
  .replace(/[^a-z0-9\s-]/g, '')
  .replace(/\s+/g, '-')
  .replace(/-+/g, '-')
  .trim();
const url = `/news/author/${authorSlug}`;
---

<SocialLink url={url} label={`View news by ${authorName}`}>
  <svg
    class="h-5 w-5"
    fill="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path
      d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"
    ></path>
  </svg>
</SocialLink>
