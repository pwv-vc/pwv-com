---
import { getFeaturedLibraryPosts } from '../lib/library';
import PostsGrid from './PostsGrid.astro';

const featuredPosts = await getFeaturedLibraryPosts();
---

{
  featuredPosts.length > 0 && (
    <section class="mb-12 border-b border-gray-200 pb-12">
      <div class="mb-8 text-center">
        <h2 class="mb-2 text-xl font-bold text-[var(--pwv-blue)] md:text-2xl">
          Featured Insights
        </h2>
      </div>
      <PostsGrid posts={featuredPosts.slice(0, 6)} size="large" />
    </section>
  )
}
