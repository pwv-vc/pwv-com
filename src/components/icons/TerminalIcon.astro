---
interface Props {
  class?: string;
}

const { class: className = 'h-8 w-8' } = Astro.props;
---

<!-- Commodore 1084-style CRT monitor icon -->
<svg
  class={className}
  viewBox="0 0 64 64"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- Monitor casing (Commodore 1084 style - more rectangular) -->
  <rect
    x="8"
    y="4"
    width="48"
    height="42"
    rx="3"
    fill="#00d22e"
    opacity="0.1"
  ></rect>
  <rect
    x="8"
    y="4"
    width="48"
    height="42"
    rx="3"
    stroke="#00d22e"
    stroke-width="2.5"
    fill="none"
  ></rect>

  <!-- Thick bezel characteristic of 1084 -->
  <rect
    x="13"
    y="9"
    width="38"
    height="28"
    rx="1"
    stroke="#00d22e"
    stroke-width="1.5"
    opacity="0.35"
    fill="none"
  ></rect>

  <!-- CRT screen with slight curve (4:3 ratio like 1084) -->
  <rect
    x="15"
    y="11"
    width="34"
    height="24"
    rx="2"
    fill="#000000"
  ></rect>
  <rect
    x="15"
    y="11"
    width="34"
    height="24"
    rx="2"
    fill="#00d22e"
    opacity="0.08"
  ></rect>

  <!-- Subtle screen curvature highlight -->
  <ellipse
    cx="28"
    cy="18"
    rx="10"
    ry="6"
    fill="#00d22e"
    opacity="0.12"
  ></ellipse>

  <!-- Command prompt character with glow -->
  <text
    x="21"
    y="26"
    font-family="monospace"
    font-size="14"
    font-weight="bold"
    fill="#00d22e"
    filter="url(#glow)"
  >
    &gt;
  </text>
  <text
    x="28"
    y="26"
    font-family="monospace"
    font-size="12"
    font-weight="bold"
    fill="#00d22e"
    opacity="0.7"
  >
    _
  </text>

  <!-- Front control panel area (bottom of monitor) -->
  <rect
    x="13"
    y="38"
    width="38"
    height="6"
    fill="#00d22e"
    opacity="0.08"
  ></rect>

  <!-- Control knobs/buttons (right side like 1084) -->
  <circle cx="46" cy="41" r="1.2" stroke="#00d22e" stroke-width="0.8" opacity="0.5"></circle>
  <circle cx="50" cy="41" r="1.2" stroke="#00d22e" stroke-width="0.8" opacity="0.5"></circle>

  <!-- Power LED indicator (left side) -->
  <circle
    cx="16"
    cy="41"
    r="1.2"
    fill="#00d22e"
    opacity="0.9"
  ></circle>

  <!-- Commodore 1084 style base stand -->
  <rect
    x="22"
    y="46"
    width="20"
    height="7"
    rx="1.5"
    fill="#00d22e"
    opacity="0.45"
  ></rect>
  
  <!-- Base platform -->
  <rect
    x="18"
    y="53"
    width="28"
    height="3"
    rx="1.5"
    fill="#00d22e"
    opacity="0.35"
  ></rect>

  <!-- Ventilation slots on side -->
  <line x1="52" y1="14" x2="52" y2="17" stroke="#00d22e" stroke-width="0.8" opacity="0.3"></line>
  <line x1="52" y1="19" x2="52" y2="22" stroke="#00d22e" stroke-width="0.8" opacity="0.3"></line>
  <line x1="52" y1="24" x2="52" y2="27" stroke="#00d22e" stroke-width="0.8" opacity="0.3"></line>

  <!-- Phosphorescent glow filter -->
  <defs>
    <filter id="glow" x="-50%" y="-50%" width="200%" height="200%">
      <feGaussianBlur stdDeviation="1.5" result="coloredBlur"></feGaussianBlur>
      <feMerge>
        <feMergeNode in="coloredBlur"></feMergeNode>
        <feMergeNode in="SourceGraphic"></feMergeNode>
      </feMerge>
    </filter>
  </defs>
</svg>
