<style>
  /* Terminal container styles */
  .terminal-container {
    background: #000000;
    min-height: 100vh;
    position: relative;
    overflow-x: hidden;
  }

  /* Scanline effect */
  .scanlines {
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.15),
      rgba(0, 0, 0, 0.15) 1px,
      transparent 1px,
      transparent 2px
    );
    animation: scanline 8s linear infinite;
  }

  @keyframes scanline {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(10px);
    }
  }

  /* CRT glow effect */
  .crt-glow {
    background: radial-gradient(
      ellipse at center,
      rgba(0, 210, 46, 0.05) 0%,
      transparent 70%
    );
    pointer-events: none;
  }

  /* ASCII logo */
  .ascii-logo {
    text-shadow: 0 0 10px rgba(0, 210, 46, 0.5);
    line-height: 1.2;
  }

  /* Boot sequence animation */
  .boot-sequence {
    animation: fadeIn 0.5s ease-in;
  }

  .boot-line {
    animation: bootLine 0.3s ease-out;
    opacity: 0;
    animation-fill-mode: forwards;
  }

  .boot-line:nth-child(1) { animation-delay: 0.1s; }
  .boot-line:nth-child(2) { animation-delay: 0.3s; }
  .boot-line:nth-child(3) { animation-delay: 0.5s; }
  .boot-line:nth-child(4) { animation-delay: 0.7s; }
  .boot-line:nth-child(5) { animation-delay: 0.9s; }
  .boot-line:nth-child(6) { animation-delay: 1.1s; }

  @keyframes bootLine {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* Keyboard key styling */
  kbd {
    font-family: 'DM Mono', monospace;
    font-size: 0.875rem;
  }

  /* Hide boot sequence after it's done */
  .boot-sequence.hidden {
    display: none;
  }

  /* Cursor blink animation */
  @keyframes blink {
    0%, 49% {
      opacity: 1;
    }
    50%, 100% {
      opacity: 0;
    }
  }

  .cursor-blink {
    animation: blink 1s infinite;
  }

  /* Smooth scrolling */
  .terminal-output {
    scroll-behavior: smooth;
  }

  /* Mobile-optimized scrollbar */
  @media (max-width: 768px) {
    .terminal-output {
      scrollbar-width: thin;
    }
    
    .terminal-output::-webkit-scrollbar {
      width: 4px;
    }
    
    .terminal-output::-webkit-scrollbar-thumb {
      background: rgba(0, 210, 46, 0.3);
      border-radius: 2px;
    }
  }

  /* Ensure terminal section is visible */
  .terminal-section {
    min-height: 60px;
    position: relative;
    z-index: 100;
  }

  /* Make sure terminal interface shows */
  .terminal-interface {
    display: block !important;
    visibility: visible !important;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .ascii-logo {
      font-size: 0.5rem;
      line-height: 1.1;
    }
    
    .terminal-wrapper {
      padding-left: 0.75rem;
      padding-right: 0.75rem;
    }
  }

  /* Prevent horizontal scroll on small screens */
  @media (max-width: 768px) {
    pre {
      overflow-x: auto;
      max-width: 100%;
    }
  }

  /* Touch-friendly improvements */
  @media (hover: none) and (pointer: coarse) {
    input {
      font-size: 16px; /* Prevent zoom on iOS */
    }
  }
</style>

<script>
  // Hide boot sequence after animation completes
  setTimeout(() => {
    const bootSequence = document.getElementById('boot-sequence');
    if (bootSequence) {
      bootSequence.classList.add('hidden');
    }
  }, 2000);
</script>
