---
import Layout from '../../layouts/Layout.astro';
import Heading1 from '../../components/Heading1.astro';
import Heading2NoUnderline from '../../components/Heading2NoUnderline.astro';

export const prerender = true;
---

<Layout
  title="Apply"
  description="PWV provides early-stage capital for technology founders, investing $500K–$3M+ from Pre-Seed through Series A."
  enableUTMTracking={true}
  contentType="apply"
>
  <section class="mx-auto">
    <Heading1>Apply</Heading1>
    <Heading2NoUnderline
      >Built by Founders. Run by Operators. Backing What’s Next.
    </Heading2NoUnderline>

    <div class="text-pwv-black space-y-4 text-lg">
      <p>
        PWV provides early-stage capital for technology founders, investing
        $500K–$3M+ from Pre-Seed through Series A.
      </p>
      <p>
        Our focus is on platforms, tools, and infrastructure that use code,
        models, and data to turn frontier science and engineering into real
        products with near-term impact. We’re a partner from seed to scale and
        with you every step of the build.
      </p>
    </div>

    <section class="mx-auto mt-8 max-w-2xl">
      <form
        name="apply"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        action="/apply/thank-you"
        class="border-pwv-gray bg-surface rounded-lg border p-6"
      >
        <p class="hidden">
          <label>
            Don’t fill this out if you're human: <input name="bot-field" />
          </label>
        </p>

        <div class="mb-4">
          <label
            for="name"
            class="text-pwv-black mb-1 block text-sm font-medium">Name</label
          >
          <input
            id="name"
            name="name"
            type="text"
            required
            class="border-pwv-gray text-pwv-black focus:border-pwv-black w-full rounded-md border bg-white px-3 py-2 placeholder-gray-400 focus:outline-none"
            placeholder="Your name"
          />
        </div>

        <div class="mb-4">
          <label
            for="email"
            class="text-pwv-black mb-1 block text-sm font-medium">Email</label
          >
          <input
            id="email"
            name="email"
            type="email"
            required
            class="border-pwv-gray text-pwv-black focus:border-pwv-black w-full rounded-md border bg-white px-3 py-2 placeholder-gray-400 focus:outline-none"
            placeholder="your-work-email@example.com"
          />
        </div>

        <div class="mb-4">
          <label
            for="company"
            class="text-pwv-black mb-1 block text-sm font-medium"
            >Company Name</label
          >
          <input
            id="company"
            name="company"
            type="text"
            class="border-pwv-gray text-pwv-black focus:border-pwv-black w-full rounded-md border bg-white px-3 py-2 placeholder-gray-400 focus:outline-none"
            placeholder="The name of your company"
          />
        </div>

        <div class="mb-4">
          <label
            for="website"
            class="text-pwv-black mb-1 block text-sm font-medium">Website</label
          >
          <input
            id="website"
            name="website"
            type="url"
            class="border-pwv-gray text-pwv-black focus:border-pwv-black w-full rounded-md border bg-white px-3 py-2 placeholder-gray-400 focus:outline-none"
            placeholder="https://example.com"
          />
        </div>

        <div class="mb-4">
          <label
            for="deck"
            class="text-pwv-black mb-1 block text-sm font-medium"
            >Pitch Deck</label
          >
          <input
            id="deck"
            name="deck"
            type="url"
            class="border-pwv-gray text-pwv-black focus:border-pwv-black w-full rounded-md border bg-white px-3 py-2 placeholder-gray-400 focus:outline-none"
            placeholder="Optional link to deck from Docsend, Brieflink, or Google Drive"
          />
        </div>

        <div class="mb-6">
          <label
            for="message"
            class="text-pwv-black mb-1 block text-sm font-medium">Message</label
          >
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="border-pwv-gray text-pwv-black focus:border-pwv-black w-full rounded-md border bg-white px-3 py-2 placeholder-gray-400 focus:outline-none"
            placeholder="Tell us about your company, team and what you're building. If you're fundraising, let us know what stage you're at, if you've raised before, and how much you're raising."
          ></textarea>
        </div>

        <div>
          <button
            type="submit"
            class="bg-pwv-black text-pwv-white hover:bg-pwv-black/90 border-pwv-black inline-flex items-center gap-2 rounded-lg border px-5 py-2 text-sm font-medium transition-colors"
          >
            Apply
            <svg
              class="h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </button>
        </div>
      </form>
    </section>
  </section>
</Layout>
