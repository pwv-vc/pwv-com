---
import Layout from '../../layouts/Layout.astro';
import Heading1 from '../../components/Heading1.astro';
import Heading2NoUnderline from '../../components/Heading2NoUnderline.astro';
---

<Layout
  title="Apply"
  description=">Built by Founders. Run by Operators. Backing What’s Next. Apply to PWV."
>
  <section class="mx-auto">
    <Heading1>Apply</Heading1>
    <Heading2NoUnderline
      >Built by Founders. Run by Operators. Backing What’s Next.
    </Heading2NoUnderline>
  </section>

  <section class="mx-auto mt-8 max-w-2xl">
    <form
      name="contact"
      method="POST"
      data-netlify="true"
      netlify-honeypot="bot-field"
      action="/apply/thank-you"
      class="border-pwv-gray bg-surface rounded-lg border p-6"
    >
      <input type="hidden" name="form-name" value="contact" />
      <p class="hidden">
        <label>
          Don’t fill this out if you're human: <input name="bot-field" />
        </label>
      </p>

      <div class="mb-4">
        <label for="name" class="text-pwv-black mb-1 block text-sm font-medium"
          >Name</label
        >
        <input
          id="name"
          name="name"
          type="text"
          required
          class="border-pwv-gray text-pwv-black placeholder-pwv-gray focus:border-pwv-black w-full rounded-md border bg-white px-3 py-2 focus:outline-none"
          placeholder="Your name"
        />
      </div>

      <div class="mb-4">
        <label for="email" class="text-pwv-black mb-1 block text-sm font-medium"
          >Email</label
        >
        <input
          id="email"
          name="email"
          type="email"
          required
          class="border-pwv-gray text-pwv-black placeholder-pwv-gray focus:border-pwv-black w-full rounded-md border bg-white px-3 py-2 focus:outline-none"
          placeholder="you@example.com"
        />
      </div>

      <div class="mb-6">
        <label
          for="message"
          class="text-pwv-black mb-1 block text-sm font-medium">Message</label
        >
        <textarea
          id="message"
          name="message"
          rows="5"
          required
          class="border-pwv-gray text-pwv-black placeholder-pwv-gray focus:border-pwv-black w-full rounded-md border bg-white px-3 py-2 focus:outline-none"
          placeholder="How would you like to work with us?"></textarea>
      </div>

      <div>
        <button
          type="submit"
          class="bg-pwv-black text-pwv-white hover:bg-pwv-black/90 border-pwv-black inline-flex items-center gap-2 rounded-lg border px-5 py-2 text-sm font-medium transition-colors"
        >
          Join Us
          <svg
            class="h-4 w-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
      </div>
    </form>
  </section>
</Layout>
