---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import Heading1 from '../../../components/Heading1.astro';
import PersonCard from '../../../components/entities/PersonCard.astro';
import EntitySEO from '../../../components/entities/EntitySEO.astro';

export async function getStaticPaths() {
  const postEntities = await getCollection('extractedPostEntities');
  
  const peopleMap = new Map<string, { posts: string[], mentions: number, role?: string }>();

  for (const post of postEntities) {
    const { slug, people } = post.data;

    people.forEach(person => {
      const personName = typeof person === 'string' ? person : person.name;
      const personRole = typeof person === 'object' ? person.role : undefined;
      
      if (!peopleMap.has(personName)) {
        peopleMap.set(personName, { posts: [], mentions: 0, role: personRole });
      }
      const personData = peopleMap.get(personName)!;
      personData.posts.push(slug);
      personData.mentions += 1;
      if (personRole && !personData.role) {
        personData.role = personRole;
      }
    });
  }

  return Array.from(peopleMap.entries()).map(([name, data]) => {
    const slug = name.toLowerCase().replace(/\s+/g, '-').replace(/[^\w-]/g, '');
    return {
      params: { slug },
      props: { 
        name,
        ...data,
      },
    };
  });
}

const { name, role, mentions, posts } = Astro.props;

const title = `${name}${role ? ` (${role})` : ''} | PWV Explore`;
const description = `${name}${role ? `, ${role},` : ''} mentioned ${mentions} time${mentions === 1 ? '' : 's'} across ${posts.length} PWV blog post${posts.length === 1 ? '' : 's'}. Explore people featured in PWV content.`;
const personSlug = name.toLowerCase().replace(/\s+/g, '-').replace(/[^\w-]/g, '');
const pageUrl = `/celebrate/people/${personSlug}/`;

// Get hero image from first post if available
const allPosts = await getCollection('posts');
const firstPost = posts[0] ? allPosts.find(p => p.id === posts[0]) : null;
const heroImageUrl = firstPost?.data.heroImage;
---

<EntitySEO 
  title={title}
  description={description}
  type="person"
  entityName={name}
  url={pageUrl}
  imageUrl={heroImageUrl}
/>

<Layout title={title} description={description}>
  <section class="mx-auto mb-12 max-w-4xl">
    <div class="mb-8">
      <a href="/celebrate/people/" class="text-sm text-pwv-black/60 hover:text-pwv-green transition-colors">
        ‚Üê Back to all people
      </a>
    </div>

    <Heading1>{name}</Heading1>
    {role && (
      <p class="text-xl text-pwv-black/70 italic mb-6">{role}</p>
    )}
    
    <div class="mb-8">
      <p class="text-lg text-pwv-black/80">
        Featured in <span class="font-bold">{posts.length}</span> PWV blog post{posts.length === 1 ? '' : 's'} 
        with <span class="font-bold">{mentions}</span> mention{mentions === 1 ? '' : 's'}.
      </p>
    </div>

    <div class="max-w-md mx-auto mb-8">
      <PersonCard
        name={name}
        role={role}
        mentions={mentions}
        posts={posts}
        borderColor="pwv-soft-periwinkle"
      />
    </div>

    <div class="text-center mt-8">
      <a 
        href="/celebrate/people/"
        class="inline-block rounded-full border-2 border-pwv-black bg-pwv-black px-6 py-3 text-white hover:bg-pwv-green hover:border-pwv-green transition-colors"
      >
        Explore more people
      </a>
    </div>
  </section>
</Layout>
