---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Heading1 from '../../components/Heading1.astro';
import FactCard from '../../components/entities/FactCard.astro';
import ShowcaseNav from '../../components/entities/ShowcaseNav.astro';
import ShowcaseIntro from '../../components/entities/ShowcaseIntro.astro';

// Get all extracted entities
const allEntities = await getCollection('extractedPostEntities');

// Aggregate all facts with post context
interface FactWithContext {
  text: string;
  category: string;
  date?: string;
  postSlug: string;
  postTitle: string;
  pubDate?: string;
}

const factsWithContext: FactWithContext[] = [];

for (const entity of allEntities) {
  const facts = entity.data.facts || [];
  for (const fact of facts) {
    factsWithContext.push({
      ...fact,
      postSlug: entity.id,
      postTitle: entity.data.title,
      pubDate: entity.data.pubDate,
    });
  }
}

// Define color palette for facts
const colors = [
  'pwv-soft-periwinkle',
  'pwv-soft-lavender',
  'pwv-soft-teal',
  'pwv-soft-yellow',
  'pwv-soft-green',
  'pwv-soft-coral',
];

const title = 'Showcase Facts';
const description = 'Key insights, trends, and announcements from PWV posts';
---

<Layout title={title} description={description}>
  <section class="mx-auto mb-12">
    <Heading1>{title}</Heading1>
    
    <ShowcaseIntro />

    <ShowcaseNav currentPath="/showcase/facts/" />

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-3">
      {factsWithContext.map((fact, index) => (
        <FactCard
          fact={fact.text}
          category={fact.category}
          date={fact.date}
          postSlug={fact.postSlug}
          postTitle={fact.postTitle}
          pubDate={fact.pubDate}
          borderColor={colors[index % colors.length]}
          factIndex={index}
        />
      ))}
    </div>

    {factsWithContext.length === 0 && (
      <div class="text-center py-12">
        <p class="text-lg text-pwv-black/60">No facts found yet.</p>
      </div>
    )}
  </section>
</Layout>
