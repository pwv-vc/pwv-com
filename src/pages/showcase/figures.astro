---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Heading1 from '../../components/Heading1.astro';
import FigureCard from '../../components/entities/FigureCard.astro';
import ShowcaseNav from '../../components/entities/ShowcaseNav.astro';
import ShowcaseIntro from '../../components/entities/ShowcaseIntro.astro';

// Get all extracted entities
const allEntities = await getCollection('extractedPostEntities');

// Aggregate all figures with post context
interface FigureWithContext {
  value: string;
  context: string;
  unit: string;
  postSlug: string;
  postTitle: string;
  pubDate?: string;
}

const figuresWithContext: FigureWithContext[] = [];

for (const entity of allEntities) {
  const figures = entity.data.figures || [];
  for (const figure of figures) {
    figuresWithContext.push({
      ...figure,
      postSlug: entity.id,
      postTitle: entity.data.title,
      pubDate: entity.data.pubDate,
    });
  }
}

// Define color palette for figures
const colors = [
  'pwv-soft-periwinkle',
  'pwv-soft-lavender',
  'pwv-soft-teal',
  'pwv-soft-yellow',
  'pwv-soft-green',
  'pwv-soft-coral',
];

const title = 'Showcase Figures';
const description = 'Key metrics and numbers from PWV posts';
---

<Layout title={title} description={description}>
  <section class="mx-auto mb-12">
    <Heading1>{title}</Heading1>
    
    <ShowcaseIntro />

    <ShowcaseNav currentPath="/showcase/figures/" />

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-3">
      {figuresWithContext.map((figure, index) => (
        <FigureCard
          value={figure.value}
          context={figure.context}
          unit={figure.unit}
          postSlug={figure.postSlug}
          postTitle={figure.postTitle}
          pubDate={figure.pubDate}
          borderColor={colors[index % colors.length]}
          figureIndex={index}
        />
      ))}
    </div>

    {figuresWithContext.length === 0 && (
      <div class="text-center py-12">
        <p class="text-lg text-pwv-black/60">No figures found yet.</p>
      </div>
    )}
  </section>
</Layout>
