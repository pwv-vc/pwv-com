---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Heading1 from '../../components/Heading1.astro';
import FigureCard from '../../components/entities/FigureCard.astro';
import ShowcaseNav from '../../components/entities/ShowcaseNav.astro';
import ShowcaseIntro from '../../components/entities/ShowcaseIntro.astro';

// Get all extracted entities
const allEntities = await getCollection('extractedPostEntities');

// Aggregate all figures with post context
interface FigureWithContext {
  value: string;
  context: string;
  unit: string;
  postSlug: string;
  postTitle: string;
  pubDate?: string;
}

const figuresWithContext: FigureWithContext[] = [];

for (const entity of allEntities) {
  const figures = entity.data.figures || [];
  for (const figure of figures) {
    figuresWithContext.push({
      ...figure,
      postSlug: entity.id,
      postTitle: entity.data.title,
      pubDate: entity.data.pubDate,
    });
  }
}

// Define color palette for figures
const colors = [
  'pwv-soft-periwinkle',
  'pwv-soft-lavender',
  'pwv-soft-teal',
  'pwv-soft-yellow',
  'pwv-soft-green',
  'pwv-soft-coral',
];

const title = 'Showcase Figures';
const description = 'Explore key metrics, funding amounts, user numbers, revenue figures, and growth statistics from PWV portfolio companies and featured startups. Data-driven insights into the technology ecosystem.';
const keywords = 'startup metrics, funding amounts, growth statistics, revenue numbers, user metrics, valuation data, startup data, technology metrics, portfolio metrics, startup statistics';
const image = '/og-pwv-green.png';
const imageAlt = 'PWV Showcase Figures - Key metrics and statistics from portfolio companies';

// Structured data for the collection page
const collectionSchema = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: title,
  description: description,
  url: `${Astro.site}showcase/figures/`,
  isPartOf: {
    '@type': 'WebSite',
    name: 'PWV',
    url: Astro.site,
  },
  about: {
    '@type': 'Thing',
    name: 'Metrics and Numbers',
    description: 'Key metrics from PWV content',
  },
};
---

<Layout 
  title={title} 
  description={description}
  keywords={keywords}
  image={image}
  imageAlt={imageAlt}
  additionalSchemas={[{ schema: collectionSchema }]}
>
  <section class="mx-auto mb-12">
    <Heading1>{title}</Heading1>
    
    <ShowcaseIntro />

    <ShowcaseNav currentPath="/showcase/figures/" />

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-3">
      {figuresWithContext.map((figure, index) => (
        <FigureCard
          value={figure.value}
          context={figure.context}
          unit={figure.unit}
          postSlug={figure.postSlug}
          postTitle={figure.postTitle}
          pubDate={figure.pubDate}
          borderColor={colors[index % colors.length]}
          figureIndex={index}
        />
      ))}
    </div>

    {figuresWithContext.length === 0 && (
      <div class="text-center py-12">
        <p class="text-lg text-pwv-black/60">No figures found yet.</p>
      </div>
    )}
  </section>
</Layout>
