---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Heading1 from '../../components/Heading1.astro';
import Heading2NoUnderline from '../../components/Heading2NoUnderline.astro';
import QuoteCard from '../../components/explore/QuoteCard.astro';
import ExploreNav from '../../components/explore/ExploreNav.astro';

const title = 'Explore Quotes';
const description = 'Discover insightful quotes from PWV blog posts, extracted and curated from our content.';

// Load all individual post entity files
const postEntities = await getCollection('extractedPostEntities');

// Aggregate quotes from all posts
const quotesArray: Array<{
  quote: string;
  speaker: string;
  context?: string;
  postSlug: string;
  postTitle: string;
  pubDate?: string;
}> = [];

for (const post of postEntities) {
  const { slug, title: postTitle, quotes, pubDate } = post.data;

  quotes.forEach(quote => {
    quotesArray.push({
      ...quote,
      postSlug: slug,
      postTitle: postTitle,
      pubDate: pubDate || undefined,
    });
  });
}

// Sort by date (newest first) if dates available, otherwise keep insertion order
const quotes = quotesArray.sort((a, b) => {
  if (a.pubDate && b.pubDate) {
    return new Date(b.pubDate).getTime() - new Date(a.pubDate).getTime();
  }
  return 0;
});

// Color assignment function
const colors = [
  'pwv-soft-green',
  'pwv-soft-teal',
  'pwv-soft-yellow',
  'pwv-soft-coral',
  'pwv-soft-lavender',
  'pwv-soft-periwinkle',
];

const getColor = (text: string, index: number) => {
  const charCode = text.charCodeAt(0) || 0;
  return colors[(charCode + index) % colors.length];
};
---

<Layout title={title} description={description}>
  <section class="mx-auto mb-12">
    <Heading1>{title}</Heading1>
    <Heading2NoUnderline>
      {quotes.length} quotes collected from {postEntities.length} posts
    </Heading2NoUnderline>

    <ExploreNav currentPath="/explore/quotes" />

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-3">
      {
        quotes.map((quote, index) => (
          <QuoteCard
            quote={quote.quote}
            speaker={quote.speaker}
            context={quote.context}
            postSlug={quote.postSlug}
            postTitle={quote.postTitle}
            pubDate={quote.pubDate}
            borderColor={getColor(quote.quote, index)}
          />
        ))
      }
    </div>

    {quotes.length === 0 && (
      <div class="text-center py-12">
        <p class="text-lg text-pwv-black/60">No quotes found yet.</p>
      </div>
    )}
  </section>
</Layout>
