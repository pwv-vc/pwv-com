---
import Layout from "../../layouts/Layout.astro";
import "../../styles/global.css";
import { getAllLibraryPosts } from "../../lib/library";
import PostsGrid from "../../components/PostsGrid.astro";

const library = await getAllLibraryPosts();
---

<Layout>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Latest insights and thoughts</h1>
      <p class="text-lg text-gray-600">Insights, thoughts, and perspectives from PWV, our founders and community.</p>
    </div>

    <PostsGrid posts={library} size="large" />
    <div class="text-center">
      <a href="/" class="inline-flex items-center gap-2 text-neutral-600 hover:text-neutral-700 font-medium transition-colors">
        Back to Home
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</Layout>
