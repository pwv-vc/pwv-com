---
import Layout from "../../layouts/Layout.astro";
import "../../styles/global.css";
import { getAllLibraryPosts } from "../../lib/library";
import LibraryCard from "../../components/LibraryCard.astro";

const library = await getAllLibraryPosts();
---

<Layout>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Library</h1>
      <p class="text-lg text-gray-600">Insights, thoughts, and perspectives from PWV</p>
    </div>

    <!-- Masonry Layout with Varying Heights -->
    <div class="-ml-5 flex">
      <div class="pl-5 w-full md:w-1/2 lg:w-1/3">
        {library.filter((_, index) => index % 3 === 0).map((post, index) => (
          <LibraryCard post={post} size="large" />
        ))}
      </div>
      <div class="pl-5 w-full md:w-1/2 lg:w-1/3">
        {library.filter((_, index) => index % 3 === 1).map((post, index) => (
          <LibraryCard post={post} size="large" />
        ))}
      </div>
      <div class="pl-5 w-full md:w-1/2 lg:w-1/3">
        {library.filter((_, index) => index % 3 === 2).map((post, index) => (
          <LibraryCard post={post} size="large" />
        ))}
      </div>
    </div>
  </div>
</Layout>
