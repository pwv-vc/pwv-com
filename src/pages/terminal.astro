<style>
  /* Terminal outer container */
  .terminal-outer {
    min-height: 70vh;
    padding: 0.5rem;
  }

  /* Terminal container - CRT monitor style */
  .terminal-container {
    background: #000000;
    max-width: 1200px;
    width: 100%;
    height: 70vh;
    max-height: none;
    position: relative;
    overflow: hidden;
    border-radius: 16px;
    border: 8px solid #1a1a1a;
    box-shadow:
      0 0 0 2px #333,
      0 0 40px rgba(0, 210, 46, 0.15),
      inset 0 0 60px rgba(0, 0, 0, 0.8);
  }

  /* Make terminal content scrollable */
  .terminal-wrapper {
    height: 100%;
    overflow-y: auto;
    overflow-x: hidden;
    scrollbar-width: thin;
    scrollbar-color: rgba(0, 210, 46, 0.3) transparent;
  }

  .terminal-wrapper::-webkit-scrollbar {
    width: 8px;
  }

  .terminal-wrapper::-webkit-scrollbar-track {
    background: transparent;
  }

  .terminal-wrapper::-webkit-scrollbar-thumb {
    background: rgba(0, 210, 46, 0.3);
    border-radius: 4px;
  }

  .terminal-wrapper::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 210, 46, 0.5);
  }

  /* Scanline effect */
  .scanlines {
    background: repeating-linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.15),
      rgba(0, 0, 0, 0.15) 1px,
      transparent 1px,
      transparent 2px
    );
    animation: scanline 8s linear infinite;
  }

  @keyframes scanline {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(10px);
    }
  }

  /* CRT glow effect */
  .crt-glow {
    background: radial-gradient(
      ellipse at center,
      rgba(0, 210, 46, 0.05) 0%,
      transparent 70%
    );
    pointer-events: none;
  }

  /* Boot sequence animation */
  .boot-sequence {
    animation: fadeIn 0.5s ease-in;
  }

  .boot-line {
    animation: bootLine 0.3s ease-out;
    opacity: 0;
    animation-fill-mode: forwards;
  }

  .boot-line:nth-child(1) {
    animation-delay: 0.2s;
  }
  .boot-line:nth-child(2) {
    animation-delay: 0.8s;
  }
  .boot-line:nth-child(3) {
    animation-delay: 1.4s;
  }
  .boot-line:nth-child(4) {
    animation-delay: 2s;
  }
  .boot-line:nth-child(5) {
    animation-delay: 2.6s;
  }
  .boot-line:nth-child(6) {
    animation-delay: 3.2s;
  }
  .boot-line:nth-child(7) {
    animation-delay: 3.8s;
  }
  .boot-line:nth-child(8) {
    animation-delay: 4.4s;
  }

  @keyframes bootLine {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* Keyboard key styling */
  kbd {
    font-family: 'DM Mono', monospace;
    font-size: 0.875rem;
  }

  /* Hide boot sequence after it's done */
  .boot-sequence.hidden {
    display: none;
  }

  /* Cursor blink animation */
  @keyframes blink {
    0%,
    49% {
      opacity: 1;
    }
    50%,
    100% {
      opacity: 0;
    }
  }

  .cursor-blink {
    animation: blink 1s infinite;
  }

  /* Smooth scrolling */
  .terminal-output {
    scroll-behavior: smooth;
  }

  /* Mobile-optimized scrollbar */
  @media (max-width: 768px) {
    .terminal-output {
      scrollbar-width: thin;
    }

    .terminal-output::-webkit-scrollbar {
      width: 4px;
    }

    .terminal-output::-webkit-scrollbar-thumb {
      background: rgba(0, 210, 46, 0.3);
      border-radius: 2px;
    }
  }

  /* Ensure terminal section is visible */
  .terminal-section {
    min-height: 60px;
    position: relative;
    z-index: 100;
  }

  /* Make sure terminal interface shows */
  .terminal-interface {
    display: block !important;
    visibility: visible !important;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .terminal-outer {
      padding: 0.25rem;
    }

    .terminal-container {
      height: 99vh;
      border-radius: 12px;
      border-width: 6px;
    }

    .terminal-wrapper {
      padding-left: 0.75rem;
      padding-right: 0.75rem;
    }
  }

  /* Prevent horizontal scroll on small screens */
  @media (max-width: 768px) {
    pre {
      overflow-x: auto;
      max-width: 100%;
    }
  }

  /* Touch-friendly improvements */
  @media (hover: none) and (pointer: coarse) {
    input {
      font-size: 16px; /* Prevent zoom on iOS */
    }
  }
</style>

<script>
  // Hide boot sequence after animation completes
  setTimeout(() => {
    const bootSequence = document.getElementById('boot-sequence');
    if (bootSequence) {
      bootSequence.classList.add('hidden');
    }
  }, 5200);
</script>
